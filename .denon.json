{
    "files": [
        "index.ts"
    ],
    "quiet": false,
    "debug": true,
    "fullscreen": true,
    "extensions": [
        ".js",
        ".ts",
        ".py",
        ".json"
    ],
    "interval": 500,
    "watch": [
        "source/"
    ],
    "deno_args":[
        "--allow-net=0.0.0.0:8000",
        "--allow-read",
        "--allow-write",
        "--unstable"
    ],
    "execute": {
        ".js": ["deno", "run"],
        ".ts": ["deno", "run"],
        ".py": ["python"]
    },
    "fmt": false,
    "test": true
}